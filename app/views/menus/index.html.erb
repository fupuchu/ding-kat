<div class="container container-margin">
    <div class="row">
    <div class="col-lg-12 text-center">

      <h1>MENU OPTIONS</h1>
        <br>
        <div class="row">
            <% @menus.each do |menu| %>
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" <%= image_tag menu.img_src %>
                    <div class="card-body">
                        <h5 class="card-title"><%= menu.name %></h5>
                        <h5 class="card-title">$<%= menu.price %>/week</h5>
                    <div class="card-text">
                        <p><%= menu.line_1 %></p>
                        <p><%= menu.line_2 %></p>
                        <p><%= menu.line_3 %></p>
                        <p><%= menu.line_4 %></p>
                    </div>
                    <% if @current == menu.id %>
                        <button class="sub-button btn btn-primary"><%= link_to  "Unsubscribe", unsubscribe_path, method: :put, data: {confirm: 'Are you sure you want to unsubscribe?'} %></button>
                    <% else %>
                        <button class="sub-button btn btn-primary"><%= link_to  "Select This", select_menu_path(menu), method: :put %></button>
                    <% end %>
                    </div>
                </div>
            <% end %>

        </div>

        <div class="row">

          <div class="col-sm-3">
          </div>

          <div class="col-sm-3">
          </div>

        </div>
        <br>
        <button class="sub-button"><%= link_to  "Balik Kampong (Back to Home)", root_path %></button>

    </div>
    </div>
</div>
